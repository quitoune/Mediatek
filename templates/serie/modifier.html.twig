{% extends 'base.html.twig' %}

{% block title %} SÃ©rie - Modification {% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="shadow-sm p-3 mb-5 bg-white rounded border">
        <div class="row">
        	<div class="col-sm">
                {{ form_row(form.titre) }}
            </div>
        	<div class="col-sm">
                {{ form_row(form.titre_original) }}
            </div>
    	</div>
    	
        <div class="row">
        	<div class="col-sm">
                {{ form_row(form.annee) }}
            </div>
        	<div class="col-sm w-100">
                {{ form_row(form.terminee) }}
            </div>
    	</div>
    	
        <div class="row">
        	<div class="col-sm">
                {{ form_row(form.nombre_saison) }}
            </div>
        	<div class="col-sm">
                {{ form_row(form.nombre_episode) }}
            </div>
    	</div>
    	
        <div class="row">
        	<div class="col-sm w-100">
                {{ form_row(form.categories) }}
            </div>
        	<div class="col-sm w-100">
                {{ form_row(form.saga) }}
            </div>
    	</div>
        
        <div class="row text-center center-item">
            {{ form_row(form.save) }}
        </div>
    </div>
    
    {{ form_rest(form) }}
    {{ form_errors(form) }}
    {{ form_end(form) }}
    
{% endblock %}

{% block script %}
	<script src="{{ asset('js/collection.js') }}"></script>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		$(document).ready(function(){
			$("#serie_terminee").select2({
				minimumResultsForSearch: -1
			});
			$("#serie_saga").select2();
			$("#serie_categories").select2({
				"multiple": true
			});
		});
	</script>
{% endblock %}