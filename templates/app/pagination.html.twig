{% if pagination.nbr_page > 0 %}
    <ul class="pagination justify-content-center">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) | decode }}"><<</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page-1})) | decode }}"><</a>
            </li>
        {% endif %}

        {# Affichage de toutes les pages entre p-3 et p+3 sauf si < 1 ou > nbPages #}
        {% for p in range(max(pagination.page-3, 1), min(pagination.page+3, pagination.nbr_page)) %}
            <li class="page-item {% if p == pagination.page %}active{% endif %}">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) | decode }}"> {{ p }} </a>
            </li>
        {% endfor %}

        {% if pagination.page < pagination.nbr_page %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page+1})) | decode }}">></a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.nbr_page})) | decode }}">>></a>
            </li>
        {% endif %}
    </ul>
{% endif %}
