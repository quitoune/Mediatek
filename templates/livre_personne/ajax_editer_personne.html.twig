<div id="ajax_livre_personne_editer">
	{{ form_start(form) }}
    <div class="modal-header">
        <h5 class="modal-title">Edition d'un propri√©taire du livre {{ titre(livrePersonne.livre, app.session.get('user')['livre_vo']) }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    
    <div class="modal-body">
        <div class="row">
        	<div class="col-sm w-100">
            	{{ form_row(form.personne) }}
            </div>
        	<div class="col-sm w-100">
            	{{ form_row(form.lieu) }}
            </div>
        </div>
        <div class="row">
        	<div class="col-sm w-100">
            	{{ form_row(form.format) }}
            </div>
        	<div class="col-sm">
            	{{ form_row(form.isbn) }}
            </div>
        	<div class="col-sm">
            	{{ form_row(form.date_achat) }}
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
    	{{ form_row(form.save) }}
    </div>
    
    {{ form_rest(form) }}
    {{ form_errors(form) }}
    {{ form_end(form) }}
</div>

{% block javascripts %}
    <script type="text/javascript">
        $('#bloc_modal').modal({
            'show' : true,
            'backdrop' : 'static'
        });

        $("form select").select2({
        	minimumResultsForSearch: -1
        });

        var url = "{{ path('ajax_livre_personne_editer_personne', {'id': livrePersonne.id}) }}";
		var url_base = "{{ path('personne_pour_livre', {'slug': livrePersonne.livre.slug}) }}";
		SubmitModal("livre_personne", "livre", url, "#bloc_modal", url_base, "#personnes");
    </script>
{% endblock %}