<div id="ajax_serie_saisons_ajouter">
	<form name="serie_saisons" method="get">
        <div class="modal-header">
            <h5 class="modal-title">Ajout de saisons à {{ titre(serie, app.session.get('user')['episode_vo']) }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        
        <div class="modal-body">
        	<div id="serie_saisons">
                <div class="row">
                	<div class="col-sm-3">Nom</div>
                	<div class="col-sm-4">N° de saison</div>
                	<div class="col-sm-4">Nombre d'épisode</div>
                	<div class="col-sm-1 addElement collection"><i class="fas fa-plus"></i></div>
                </div>
            </div>
        </div>
        
        <div class="modal-footer">
        	<button id = "saison_save" class="btn btn-media">Save</button>
        </div>
    </form>
</div>

